    .btn-capture:active { background-color: #9965f4; transform: scale(0.98); }
    
    .btn-action { background-color: #03dac6; color: #000; margin: 5px; padding: 10px 15px; font-size: 14px; }
    .btn-save { background-color: #cf6679; color: #fff; }

    /* --- GALLERY GRID --- */
    .gallery-container {
      padding: 10px;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr; /* 2 Columns */
      gap: 15px;
      margin-top: 20px;
    }

    .grid-item {
      background-color: #1e1e1e;
